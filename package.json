{
  "name": "ngcash-desafio",
  "version": "1.0.0",
  "description": "Desafio tecnico para a empresa NG.CASH",
  "main": "./build/server",
  "scripts": {
    "test": "mocha -r ts-node/register ./src/tests/*$NAME*.{test,spec}.ts -t 10000 --exit",
    "test:coverage": "nyc npm run test",
    "test:coverage:json": "nyc --reporter=json-summary npm run test",
    "db:reset": "npx sequelize-cli db:drop && npx sequelize-cli db:create && npx sequelize-cli db:migrate && npx sequelize-cli db:seed:all",
    "predev": "npm run build && npm run db:reset",
    "dev": "nodemon --watch \".src/**\" .src/server.ts",
    "start": "ts-node-dev --transpile-only .src/server.ts",
    "build": "npx tsc",
    "lint": "eslint ./src --ext .ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RafaelCunhaS/NG.CASH-Desafio.git"
  },
  "author": "Rafael Santos",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/RafaelCunhaS/NG.CASH-Desafio/issues"
  },
  "homepage": "https://github.com/RafaelCunhaS/NG.CASH-Desafio#readme",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "jsonwebtoken": "^8.5.1",
    "md5": "^2.3.0",
    "pg": "^8.8.0",
    "sequelize": "^6.25.5"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@types/chai": "^4.3.4",
    "@types/chai-http": "^4.2.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.14",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/md5": "^2.3.2",
    "@types/mocha": "^10.0.0",
    "@types/node": "^18.11.9",
    "@types/sequelize": "^4.28.14",
    "@types/sinon": "^10.0.13",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "chai": "^4.3.7",
    "chai-http": "^4.3.0",
    "eslint": "^8.27.0",
    "eslint-config-standard-with-typescript": "^23.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.5.1",
    "eslint-plugin-promise": "^6.1.1",
    "mocha": "^10.1.0",
    "nodemon": "^2.0.20",
    "nyc": "^15.1.0",
    "sequelize-cli": "^6.5.2",
    "sinon": "^14.0.2",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.8.4"
  }
}
